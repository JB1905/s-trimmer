{
  "name": "s-trimmer",
  "version": "1.0.0",
  "description": "Format spaces from the left and right end of a string and between strings",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/s-trimmer.cjs.js",
  "module": "lib/s-trimmer.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/s-trimmer.git"
  },
  "keywords": [
    "string",
    "trim",
    "spaces",
    "start",
    "end",
    "between",
    "format"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/s-trimmer/issues"
  },
  "homepage": "https://github.com/JB1905/s-trimmer#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@types/jest": "^26.0.2",
    "@types/node": "^14.0.14",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
